#intro {
	font-size: 18px;
	text-align: center;
	margin: 80px;
}

.sign_in {
	margin: 80px 50px;
	text-align: center;
}

.sign_in .button {
	font-size: 30px;
}

.sign_in img {
	margin-bottom: -6px;
	margin-right: 6px;
}

#index {
	padding: 30px 0;
}

#index h3 {
	margin-top: 0;
}

#tomatoes_list,
#projects_list,
#user_statistics {
	margin-bottom: 50px;
}

#tomatoes_list,
#projects_list {
	font-size: 10px;
	width: 400px;
}

tr.highlight {
	background-color: #dfd;
}

td.tomato_duration,
td.project_name {
	padding-left: 1px;
}

td.tomato_duration {
	width: 110px;
}

#timer_container {
	width: 400px;
	text-align: center;
	position: fixed;
	top: 5%;
	left: -450px;
	padding: 20px;
	background: #f9f9f9;
	border: 1px solid #eee;
}

#timer_container.round_left {
	border: 1px solid #999;
	border-right: 0 none;
}

#timer_container.round_right {
	border-left: 0 none;
}

#timer_counter {
	font-size: 128px;
	margin: 20px 20px 20px;
}

#start_container {
	width: 500px;
	text-align: center;
	margin: 0 auto 20px;
}

a#start {
	font-size: 54px;
}

a#reset {}

p#reset_hint {
	font-size: 10px;
}

#new_tomato_form {
	text-align: left;
}

#leaderboards {
	margin-bottom: 50px;
}

#leaderboards .leaderboard_list {
	width: 235px;
	margin-right: 5px;
}

.leaderboard_list li {
	list-style-position: inside;
	margin-bottom: 5px;
	padding: 2px;
}

.leaderboard_list .count {
	margin-left: 30px;
	font-size: 10px;
}

.leaderboard_list li.you {
	background-color: #f0f0f0;
}

#user {
	margin-bottom: 40px;
}

.chart {
	width: 960px;
	height: 480px;
	margin-bottom: 20px;
}

.chart.overview {
	width: 960px;
	height: 80px;
	margin-bottom: 40px;
}

#tomatoes_by_hour.chart {
	margin-bottom: 40px;
}

#progress_bar {
	top: 0;
	left: 0;
	width: 0;
	height: 100%;
	position: absolute;
	z-index: 100;
}

#request_notification_permission {
	margin-bottom: 20px;
}

/* VOLUME BOX */
.unselectable {
	-moz-user-select: -moz-none;
	-khtml-user-select: none;
	-webkit-user-select: none;

	/*
	 Introduced in IE 10.
	 See http://ie.microsoft.com/testdrive/HTML5/msUserSelect/
	*/
	-ms-user-select: none;
	user-select: none;
}

.volume {
	font-size: 18px;
	margin-top: -20px;
}

.volume .up,
.volume .down {
	margin-top: 4px;
	font-weight: bold;
}

.volume .down {
	margin-right: 8px;
}
.volume .mute_toggle {
	margin-right: 4px;
}

.volume .up,
.volume .down,
.volume .mute_toggle {
	cursor: pointer;
}

#volume_icon {
	width: 32px;
	height: 35px;
	opacity: 0.7;
	background-image: url(<%= asset_path "speaker_sprite.png" %>);
}

#ticking_sound_switch_container {
  text-align: left;
}

<% (0..3).each do |level| %>
#volume_icon.level_<%= level %> {
	background-position: 0 -<%= level*35 %>px;
}
<% end %>

#tomato_signin h2 {
	margin-top: 0;
}

#tomato_signin .button {
	font-size: 24px;
}

#tomato_signin .button img {
	margin-bottom: -4px;
}

#tomato_signin #cancel {
	margin-top: 20px;
}

#tomato_signin #cancel .button {
	font-size: 10px;
}